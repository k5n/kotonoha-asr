{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kotonoha-asr",
  "version": "../package.json",
  "identifier": "com.k5-n.kotonoha.asr",
  "build": {
    "beforeDevCommand": "npx vite dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npx vite build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Kotonoha-ASR",
        "width": 1024,
        "height": 960,
        "minWidth": 480,
        "minHeight": 640
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "nsis", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright (C) 2025 Keigo Nakatani (https://github.com/k5n)",
    "shortDescription": "Kotonoha-ASR transcribes audio files into timestamped sentences using Automatic Speech Recognition (ASR) models.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      }
    },
    "windows": {
      "nsis": {
        "languages": ["English", "Japanese"],
        "displayLanguageSelector": true
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:app.db", "sqlite:dev.db"]
    }
  }
}
